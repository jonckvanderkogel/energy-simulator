<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="createPowerConsumptionTable" author="jonck">
        <createTable tableName="power_consumption">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="power_consumption_pk"/>
            </column>
            <column name="date_time" type="datetime">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="amount_consumed" type="numeric(10,3)">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createGasConsumptionTable" author="jonck">
        <createTable tableName="gas_consumption">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="gas_consumption_pk"/>
            </column>
            <column name="date_time" type="datetime">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="amount_consumed" type="numeric(10,3)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
